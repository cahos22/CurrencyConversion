@model CurrencyConversion.ViewModels.ConversionFormViewModel

@{
    ViewBag.Title = "Currency Conversion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Convert", "Conversions"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.Conversion.FromCurrencyId)
        @Html.DropDownListFor(m => m.Conversion.FromCurrencyId, new SelectList(Model.Currencies, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Conversion.FromCurrencyId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Conversion.ToCurrencyId)
        @Html.DropDownListFor(m => m.Conversion.ToCurrencyId, new SelectList(Model.Currencies, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Conversion.ToCurrencyId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Conversion.Rate)
        @Html.TextBoxFor(m => m.Conversion.Rate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Conversion.Rate)
    </div>
    @Html.HiddenFor(m => m.Conversion.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
